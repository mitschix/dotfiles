#####################################
## == Dcalc plugin with python3 == ##
#####################################

# dropdown calc conf
for_window [instance="dcalc"] floating enable move position center
for_window [instance="dcalc"] move scratchpad
bindsym $mod+m [instance="dcalc"] scratchpad show

exec --no-startup-id i3-sensible-terminal --class="dcalc" -e "ipython"

# vim: filetype=i3
