# Created:  20191007
#
#
# Last Updated: 20191007 - mitschix
#

rofi_cmd="rofi -dmenu -location 2 -lines 3 -theme Monokai -p "
SUDO_PASS="rofi -dmenu -p Password -password -location 2 -lines 0 -theme Monokai"

# copied from lukesmith.xyz

# A dmenu prompt to unmount drives.
# Provides you with mounted partitions, select one to unmount.
# Drives mounted at /, /boot and /home will not be options to unmount.

unmountusb() {
	[ -z "$drives" ] && exit
	chosen=$(echo "$drives" | $rofi_cmd "Unmount which drive?" | awk '{print $1}')
	[ -z "$chosen" ] && exit
	$SUDO_PASS | sudo -S umount "$chosen" && notify-send "ðŸ’» USB unmounting" "$chosen unmounted."
	}

# unmountandroid() { \
# 	chosen=$(awk '/simple-mtpfs/ {print $2}' /etc/mtab | dmenu -i -p "Unmount which device?")
# 	[ -z "$chosen" ] && exit
# 	sudo -A umount -l "$chosen" && notify-send "ðŸ¤– Android unmounting" "$chosen unmounted."
# 	}
#
# asktype() { \
# 	case "$(printf "USB\\nAndroid" | dmenu -i -p "Unmount a USB drive or Android device?")" in
# 		USB) unmountusb ;;
# 		Android) unmountandroid ;;
# 	esac
# 	}

drives=$(lsblk -nrpo "name,type,size,mountpoint" | awk '$2=="part"&&$4!~/\/boot|\/home$|SWAP/&&length($4)>1{printf "%s (%s)\n",$4,$3}')

[ -z "$drives" ] && echo "No drives to unmount." && exit
echo "Unmountable USB drive detected."
unmountusb
# else
# 	if [ -z "$drives" ]
# 	then
